<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="GravityCMS\NodeBundle\Entity\NodeContent" table="node_content"
            inheritance-type="JOINED">
        <discriminator-column name="discriminator_field" />
        <!-- discriminator map is dynamically inserted -->
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="delta" type="integer" column="delta" nullable="false"/>
        <many-to-one target-entity="GravityCMS\NodeBundle\Entity\Node" field="node" inversed-by="contents" orphan-removal="true">
        </many-to-one>
        <many-to-one target-entity="GravityCMS\NodeBundle\Entity\ContentTypeField" field="fieldType" inversed-by="contents" orphan-removal="true">
        </many-to-one>
    </entity>
</doctrine-mapping>
